<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Syracuse University Tour</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="header">
        <h1 class="header">Syracuse University Tour</h1>
    </div>
    <div class="navbar-inverse navbar-fixed-top">
        <div class="container">
            @*<div class="navbar-header">
                @Html.ActionLink("Syracuse University Tour", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>*@
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" id="nav-bar">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>
                        @Html.ActionLink("About", "About", "Home")
                </li>
                <li>
                    @Html.ActionLink("Contact", "Contact", "Home")
                </li>
                    <li>
                        @Html.ActionLink("Campus Map", "Catalog", "Landmark")
                        <ul>
                            <li>@Html.ActionLink("Google Map", "GoogleMap", "Landmark")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Photo Tour", "UserIndex", "Image")
                        <ul>
                           <li>@Html.ActionLink("Manage Image", "Index", "Image")</li>
                           <li>@Html.ActionLink("Manage Landmark", "Index", "Landmark")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Resources", "Resources", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
